@model IEnumerable<SuperStore.ViewModel.ProductViewModel>
@{
    Layout = null;
    ViewBag.Title = "GetAll";
    int counter = 1;
}
<br />

<table id="ProductTable" class="table">
    <thead>
        <tr>
            <th>Sr#</th>
            <th>Category</th>
            <th>Sub Category</th>
            <th>Product Name</th>
            <th>Code</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        @*<tr class="filter_1">
                <th></th>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Sub Category</th>
                <th>Code</th>
                <th>Action</th>
            </tr>*@
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@(counter++)</td>               
                <td>@item.CategoryName</td>
                <td>@(item.SubCategoryName == null ? "N/A" : item.SubCategoryName)</td>
                <td>@item.Name</td>
                <td>@item.Code</td>
                <td><img src="~/Images/@item.Image" height="50" width="50" class="img-circle" /></td>
                <td>
                    <table>
                        <tr>
                            <td>
                                <a href="/Product/Edit/@item.ProductId" class="btn btn-primary">

                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                &nbsp;&nbsp;
                                &nbsp;&nbsp;
                            </td>
                            <td>
                                @*<a href="/Product/Deactive/@item.ProductId" class="btn btn-danger">

                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>*@
                                <button class="btn btn-danger" id="CloseContract" title="Expire Contract" data-toggle="modal" data-target="#@item.ProductId"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>

                            </td>
                        </tr>
                    </table>

                </td>

            </tr>


            <div id="@item.ProductId" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <br />
                            <h3 class="text-center">Are you sure you want to delete this product?</h3>
                        </div>
                        <div class="modal-footer" style="border-top:none !important;">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                            <a href="/Product/Deactive/@item.ProductId" class="btn btn-success">
                                Yes
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </tbody>
</table>

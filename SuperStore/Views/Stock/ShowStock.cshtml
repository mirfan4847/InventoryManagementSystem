@model List<SuperStore.Proc_ViewModel.Get_StockDetailViewModel>
@{
    ViewBag.Title = "ShowStock";
}

<table class="table" id="StockTable">
    <thead>
        <tr>
            <th>Category</th>
            <th>Sub Category</th>
            <th>Product</th>
            <th>Total Product</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category</td>
                <td>@(item.SubCategory ?? "N/A")</td>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
            </tr>
        }
    </tbody>
</table>

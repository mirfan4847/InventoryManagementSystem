@model IEnumerable<SuperStore.Proc_ViewModel.Get_AllUsersViewModel>
@using SuperStore.Common
@{
    Layout = null;
    ViewBag.Title = "GetAll";
    int counter = 1;
}

<br />

<table id="UserTable" class="table">
    <thead>
        <tr>
            <th>Sr#</th>
            <th>Image</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <tr class="filter_1" style="display:none;">
            <th></th>
            <th>Image</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>@(counter++)</td>
                <td><img src="~/Images/@item.Image" height="50" width="50" class="img-circle" /></td>
                <td>@item.DisplayName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td>
                    <table>
                        <tr>
                            <td>
                                <a href="/Users/AddUser/@item.UserId" class="btn btn-primary">

                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                &nbsp;&nbsp;
                                &nbsp;&nbsp;
                            </td>
                            <td>
                                <button class="btn btn-danger" id="CloseContract" title="Expire Contract" data-toggle="modal" data-target="#@item.UserId"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>

                                @*<a href="/Users/Deactive/@item.UserId" class="btn btn-danger">

                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>*@
                            </td>
                        </tr>
                    </table>

                </td>

            </tr>
            <div id="@item.UserId" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <br />
                            <h3 class="text-center">Are you sure you want to delete this user?</h3>
                        </div>
                        <div class="modal-footer" style="border-top:none !important;">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                            <a href="/Users/Deactive/@item.UserId" cla class="btn btn-success">
                                Yes
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </tbody>
</table>


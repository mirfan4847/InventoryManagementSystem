@model IEnumerable<SuperStore.ViewModel.SupplierViewModel>
@using SuperStore.Common
@{
    Layout = null;
    int counter = 1;
}

<table class="table" id="SupplierTable">
    <thead>
        <tr>
            <th>Sr#</th>
            <td>Name</td>
            <td>Phone#</td>
            <td>Email</td>
            <td>Address</td>
            <td>Action</td>
        </tr>
        <tr class="filters" style="display:none;">
            <th></th>
            <td>Name</td>
            <td>Phone#</td>
            <td>Email</td>
            <td>Address</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(counter++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <table>
                        <tr>
                            <td>
                                <a href="/Supplier/AddSupplier/@EncryptDecrypt.EncryptId(item.SupplierId.ToString())" class="btn btn-primary">

                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                &nbsp;&nbsp;
                                &nbsp;&nbsp;
                            </td>
                            <td>

                                <button class="btn btn-danger" id="CloseContract" title="Expire Contract" data-toggle="modal" data-target="#@item.SupplierId"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>


                                @*<a href="/Supplier/Deactive/@EncryptDecrypt.EncryptId(item.SupplierId.ToString())" class="btn btn-danger">

                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>*@
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <div id="@item.SupplierId" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <br />
                            <h3 class="text-center">Are you sure you want to delete this supplier?</h3>
                        </div>
                        <div class="modal-footer" style="border-top:none !important;">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                            <a href="/Supplier/Deactive/@EncryptDecrypt.EncryptId(item.SupplierId.ToString())" class="btn btn-success">
                                Yes
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </tbody>
</table>

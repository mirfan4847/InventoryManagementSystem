@model IEnumerable<SuperStore.ViewModel.CustomerViewModel>
@using SuperStore.Common

@{
    Layout = null;
    ViewBag.Title = "GetAll";
    int counter = 1;
}
<br />

<table class="table" id="customerTable">
    <thead>
        <tr>
            <th>Sr#</th>
            <th>Name</th>
            <th>PhoneNo</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(counter++)
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.PhoneNo
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    <table>
                        <tr>
                            <td>
                                <a href="/Customer/Edit/@EncryptDecrypt.EncryptId(item.CustomerId.ToString())" class="btn btn-primary">

                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </td>
                            <td>
                                &nbsp;&nbsp;
                                &nbsp;&nbsp;
                            </td>
                            <td>
                                @*<a href="/Customer/Deactive/@EncryptDecrypt.EncryptId(item.CustomerId.ToString())" class="btn btn-danger">

                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>*@
                                <button class="btn btn-danger" id="CloseContract" title="Expire Contract" data-toggle="modal" data-target="#@item.CustomerId"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>

                            </td>
                        </tr>
                    </table>

                </td>
            </tr>

            <div id="@item.CustomerId" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <br />
                            <h3 class="text-center">Are you sure you want to delete this Customer?</h3>
                        </div>
                        <div class="modal-footer" style="border-top:none !important;">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                            <a href="/Customer/Deactive/@EncryptDecrypt.EncryptId(item.CustomerId.ToString())" class="btn btn-success">
                                Yes
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </tbody>



</table>

<div class="container">
    <div class="modal fade" id="" role="dialog">
        <div class="modal-dialog modal-lg">
        </div>
    </div>
</div>


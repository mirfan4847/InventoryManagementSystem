@model IEnumerable<SuperStore.Proc_ViewModel.Get_ProductSaleByProductIdViewModel>

@{
    ViewBag.Title = "Product Sale";
}

<br />
<h4 class="charts-main-title">
    <a href="/Home/Index">My Dashboard</a>
    <span class="fa fa-arrow-right"></span>
    <span class="breadcrumb-item"><a href="/Sale/SaleDetail">Sale Detail</a></span>
    <span class="fa fa-arrow-right"></span>
    <span class="breadcrumb-item">Product Sale</span>
</h4>


<br />
@foreach (var item in Model)
            {
    <div class="col-lg-3 col-md-3 col-xs-6">
        <a class="thumbnail" style="padding:20px;color:black;">
            @if (string.IsNullOrEmpty(item.Image))
            {
                <img class="img-thumbnail"
                     src="~/Images/notAvailable.jpg"
                     alt="Image not found" style="height:110px;width:130px;">
            }
            else
            {
                <img class="img-thumbnail"
                     src="~/Images/@item.Image"
                     alt="Image not found" style="height:110px;width:130px;">
            }
            <br />
            <p><strong> Name: </strong> @item.ProductName</p>
            <p><strong> Price: </strong> @item.Price</p>
            <p><strong> Quantity: </strong> @item.Quantity</p>
            <p><strong> Customer: </strong>@item.CustomerName</p>
            <p><strong> Receipt#: </strong>@item.ReceiptNo</p>
        </a>
    </div>
}

